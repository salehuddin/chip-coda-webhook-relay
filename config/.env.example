# Chip-to-Coda Webhook Relay Configuration
# Copy this file to .env and update with your actual values

# REQUIRED: Coda.io Configuration
CODA_BEARER_TOKEN=your_coda_bearer_token_here
CODA_WEBHOOK_URL=https://coda.io/hooks/your-webhook-id

# OPTIONAL: Chip Webhook Security
# Set this if you want to verify webhook signatures from Chip
CHIP_WEBHOOK_SECRET=

# OPTIONAL: Logging Configuration
LOG_LEVEL=INFO
LOG_DIRECTORY=
LOG_ROTATION_DAYS=30

# OPTIONAL: Request Configuration
REQUEST_TIMEOUT=30
RETRY_ATTEMPTS=3
RETRY_DELAY=1
SSL_VERIFY=true
MAX_PAYLOAD_SIZE=1048576

# OPTIONAL: Security Configuration
# Comma-separated list of allowed IP addresses (leave empty to allow all)
ALLOWED_IPS=
SIGNATURE_VERIFICATION=false

# OPTIONAL: Application Environment
APP_ENVIRONMENT=production
